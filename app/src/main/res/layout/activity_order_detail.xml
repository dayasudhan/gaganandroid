<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gagan.khanavali_main.orderDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CustomerName"
        android:id="@+id/ord_customer_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CustomerPhone"
        android:id="@+id/ord_customer_phone"
        android:layout_below="@+id/ord_customer_name"
        android:layout_alignLeft="@+id/ord_customer_name"
        android:layout_alignStart="@+id/ord_customer_name"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CustomerAddress"
        android:id="@+id/customer_address"
        android:layout_below="@+id/ord_customer_phone"
        android:layout_alignLeft="@+id/ord_customer_phone"
        android:layout_alignStart="@+id/ord_customer_phone"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu"
        android:id="@+id/menu_order"
        android:layout_below="@+id/customer_address"
        android:layout_alignRight="@+id/customer_address"
        android:layout_alignEnd="@+id/customer_address"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OrderStatus"
        android:id="@+id/order_status"
        android:layout_below="@+id/menu_order"
        android:layout_alignRight="@+id/menu_order"
        android:layout_alignEnd="@+id/menu_order"
        android:layout_marginTop="49dp" />

</RelativeLayout>
